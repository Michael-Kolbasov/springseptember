<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="catRepository" class="com.epam.spring.repository.CatRepositoryImpl" scope="singleton">
        <property name="name" value="I am a cat repository"/>
        <!--<constructor-arg name="cats" value=""/>-->
    </bean>

    <bean id="cat" class="com.epam.spring.model.Cat" name="cat alias" scope="prototype"
          init-method="init" destroy-method="destroy">
    </bean>

</beans>