<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="abstractAnimal" class="com.epam.spring.model.AbstractAnimal" scope="singleton" abstract="true">
    </bean>

    <bean id="dog" parent="abstractAnimal" class="com.epam.spring.factories.spring.AnimalFactory">
        <property name="animal">
            <bean class="com.epam.spring.model.Dog">
                <property name="name" value="doggo"/>
            </bean>
        </property>
    </bean>

    <!--<bean id="database" class="com.epam.spring.util.DatabaseConnection">
        <constructor-arg name="username" value="123"/>
        <constructor-arg name="password" value="123"/>
    </bean>-->

</beans>